extends layout

block content
	#inset
		.span-6
			h3.major.black Open Positions
			each jobGroup, key in jobs
				h4.black key
				.table-wrapper.color3
					table
						thead.black
							tr
								th.black Job
								th.black Location
						tbody
							each job, index in jobGroup
								tr.color1
									td
										a(href='job/' + index) #{job.name}
									td #{job.location}	
